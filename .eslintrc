{
  "plugins": [
    "import",
    "flow",
    "prettier",
    "flowtype",
    "react",
    "jsx-a11y"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "classes": true,
      "destructuring": true,
      "forOf": true,
      "blockBindings": true,
      "arrowFunctions": true,
      "generators": true
    }
  },
  "globals": {
    "window.__REDUX_DEVTOOLS_EXTENSION__": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "rules": {
    "comma-dangle": 0,
    "max-len": ["error", {
      "code": 120,
      "tabWidth": 2,
      "ignoreUrls": true
    }],
    "new-cap": ["error", {
      "newIsCap": true,
      "capIsNew": false
    }],
    "no-unused-vars": ["error", {
      "varsIgnorePattern": "^(font|style)_"
    }],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "bracketSpacing": true,
        "semi": true,
        "useTabs": false,
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2,
        "parser": "babylon",
        "jsxBracketSameLine": false
      }
    ],
    "flowtype/boolean-style": ["error", "boolean"]
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    },
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.js"
      }
    }
  }
}
